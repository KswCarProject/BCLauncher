<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/loading_bg" android:padding="5dp" android:clickable="true" android:layout_width="415dp" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView android:textSize="@dimen/setting_textsize" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/message" android:layout_width="400dp" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/setting_textsize" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/message_next" android:layout_width="400dp" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/button_layout" android:layout_width="match_parent" android:layout_height="80dp">
        <Button android:textSize="@dimen/setting_textsize" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/positiveButton" android:background="@drawable/bt_selector_blue_dialog" android:layout_width="150dp" android:layout_height="50dp" android:layout_marginRight="50dp" android:text="@string/string_callphone_yes"/>
        <Button android:textSize="@dimen/setting_textsize" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/negativeButton" android:background="@drawable/bt_selector_blue_dialog" android:layout_width="150dp" android:layout_height="50dp" android:text="@string/string_callphone_no"/>
    </LinearLayout>
</LinearLayout>
