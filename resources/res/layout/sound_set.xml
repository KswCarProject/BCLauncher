<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="50dp">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="166dp" android:layout_marginTop="7dp" android:src="@drawable/yinliang_jindutiao_n" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="25sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/sound_tv" android:layout_width="80dp" android:layout_height="match_parent" android:text="0"/>
