<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="457dp" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/weather_rl" android:background="@drawable/weather_bk" android:layout_width="391dp" android:layout_height="225dp" android:layout_marginTop="128dp" android:layout_centerHorizontal="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/time" android:layout_centerHorizontal="true">
            <TextView android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/mainleft_weather_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="2017年5月20日"/>
            <TextView android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/mainleft_weather_week" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="星期六"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_centerHorizontal="true">
            <TextView android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/mainleft_weather_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="深圳" android:layout_weight="3"/>
            <TextView android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/mainleft_weather_tempdesc" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="多云" android:layout_weight="2"/>
            <TextView android:textSize="20dp" android:textColor="#ffffffff" android:id="@+id/mainleft_weather_temperature" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="26℃-31℃" android:layout_weight="2.5"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="90dp" android:layout_centerHorizontal="true">
            <TextView android:textSize="66sp" android:textColor="#ffffffff" android:id="@+id/weather_hour" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="4dp" android:layout_marginTop="8dp" android:layout_marginRight="4dp" android:layout_marginBottom="8dp" android:src="@drawable/main_fenye_yuan1"/>
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="4dp" android:layout_marginTop="8dp" android:layout_marginRight="4dp" android:src="@drawable/main_fenye_yuan1" android:scaleType="centerInside"/>
            </LinearLayout>
            <TextView android:textSize="66sp" android:textColor="#ffffffff" android:id="@+id/weather_minute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/mainleft_weather" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="61dp" android:src="@drawable/weather_qing_baitian" android:scaleType="centerInside" android:layout_centerHorizontal="true"/>
</RelativeLayout>
