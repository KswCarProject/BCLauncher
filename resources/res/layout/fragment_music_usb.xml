<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/ll" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="horizontal" android:id="@+id/frame_music" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="45dp" android:src="@drawable/cd_beijing01"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="45dp" android:src="@drawable/fm_tiao_s"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="57dp" android:layout_marginTop="270dp" android:src="@drawable/jindutiao_n"/>
        <LinearLayout android:background="@drawable/anniu_di3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="220dp" android:layout_marginTop="325dp">
            <ImageView android:id="@+id/caidan_sd" android:background="@drawable/bt_selector_dibu01" android:clickable="true" android:layout_width="115dp" android:layout_height="53dp" android:layout_marginLeft="13dp" android:src="@drawable/anniu_caidan_n" android:scaleType="centerInside"/>
            <ImageView android:id="@+id/xuanhuan_sd" android:background="@drawable/bt_selector_dibu03" android:clickable="true" android:layout_width="115dp" android:layout_height="53dp" android:layout_marginLeft="-21dp" android:src="@drawable/anniu_allxunhuan_h" android:scaleType="centerInside"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="400dp" android:layout_marginTop="268dp">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/curIndexTview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/totalRecordTview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/456" android:layout_below="@+id/curIndexTview"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="50dp">
            <ImageView android:id="@+id/music_pic" android:layout_width="190dp" android:layout_height="190dp" android:layout_marginLeft="30dp" android:layout_marginTop="60dp" android:src="@drawable/usbmusic_tu"/>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <SeekBar android:id="@+id/music_seekbar" android:layout_width="270dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="7dp" android:maxHeight="20dp" android:max="100" android:progress="0" android:secondaryProgress="0" android:progressDrawable="@drawable/video_toolbar_sb_style" android:minHeight="20dp" android:thumb="@null" android:thumbOffset="0dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
                    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/now_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:text="00:00" android:layout_below="@+id/music_seekbar"/>
                    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/zong_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="250dp" android:layout_marginTop="25dp" android:text="02:31" android:layout_below="@+id/music_seekbar"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/xiaoyuan_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/xiaoyuan"/>
                </RelativeLayout>
                <com.touchus.benchilauncher.views.MyTextView android:textSize="25sp" android:textStyle="bold" android:textColor="#ff232222" android:ellipsize="marquee" android:id="@+id/tv_musictitle" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:text="woshoui" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="right" android:background="@drawable/anniu_di2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginRight="1dp">
                <ImageView android:id="@+id/shangyiqu" android:background="@drawable/bt_selector_dibu01" android:clickable="true" android:layout_width="115dp" android:layout_height="54dp" android:layout_marginLeft="15dp" android:src="@drawable/bt_selector_shangyiqu" android:scaleType="centerInside"/>
                <ImageView android:id="@+id/bofang" android:background="@drawable/bt_selector_dibu02" android:clickable="true" android:layout_width="117dp" android:layout_height="54dp" android:layout_marginLeft="-28dp" android:src="@drawable/bt_selector_bofang" android:scaleType="centerInside"/>
                <ImageView android:id="@+id/xiayiqu" android:background="@drawable/bt_selector_dibu03" android:clickable="true" android:layout_width="115dp" android:layout_height="54dp" android:layout_marginLeft="-22dp" android:src="@drawable/bt_selector_xiayiqu" android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="385dp" android:src="@drawable/fm_tiao_x"/>
    </FrameLayout>
</LinearLayout>
